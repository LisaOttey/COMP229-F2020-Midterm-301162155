<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the EDIT page -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%=title%></h1>

            <form class="form" method="POST">
                <div class="form-proup">
                    <label for="nameTextField">Book Name:</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Book Name"
                    name="name" 
                    value ="<%= BookList.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextfield">Author:</label>
                    <input type="name" class="form-control"
                    id="authorTextfield"
                    placeholder="Author"
                    name="author" 
                    value ="<%= BookList.author %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextfield">Published:</label>
                    <input type="name" class="form-control"
                    id="publishedTextfield"
                    placeholder="Year"
                    name="published" 
                    value ="<%= BookList.published %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextfield">Description:</label>
                    <input type="name" class="form-control"
                    id="descriptionTextfield"
                    placeholder="Brief Description"
                    name="description" 
                    value ="<%= BookList.description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="priceTextfield">Price:</label>
                    <input type="double" class="form-control"
                    id="priceTextfield"
                    placeholder=""
                    name="price" 
                    value ="<%= BookList.price %>"
                    required>
                </div>



                <!-- Submit and Cancel Buttons-->

                    <button class="btn-primary" type="submit">
                        <i class="fas fa-edit">Submit</i></button>

                        <a href="/book-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i>Cancel</a>



            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>